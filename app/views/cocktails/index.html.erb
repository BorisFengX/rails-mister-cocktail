<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/162480/glasses-ice-cubes-illuminated-drink-162480.jpeg?cs=srgb&dl=alcohol-alcoholic-alcoholic-beverage-162480.jpg&fm=jpg');">
  <div class="banner-content">
    <h1>Pick Your Cocktail</h1>
    <%= link_to "Go Pick", new_cocktail_path, class: "btn btn-primary btn-lg"  %>
  </div>
</div>


<div class = "content-container">
  <h1 class="header text-center">All our Cocktails</h1>
  <div class="cards">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
          <div class = "col col-xs-12 col-sm-4 col-md-3">
            <div class="card">
              <div class="card-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('<%= cocktail.pic %>');">
                <div class="card-content text-center">
                  <h3><%= cocktail.name %></h3>
                </div>
              </div>
              <div class="card-footer">
                <ul class="list-inline icons">
                  <li><%= link_to "Details", cocktail_path(cocktail) %></li>
                </ul>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


