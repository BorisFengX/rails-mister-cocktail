<div class="form">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-group">
          <%= f.input :name, class: 'form-control' %>
          <%= f.input :pic, class: 'form-control' %>
        </div>

        <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


