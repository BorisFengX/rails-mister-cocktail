<div class="page-banner">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @cocktail.pic %>);">
<!--     <div class="card-category">Popular</div> -->
    <div class="card-description">
      <h2><%= @cocktail.name %></h2>
<!--       <p>Very cool city, the best</p> -->
    </div>
<!--     <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
    <a class="card-link" href="#" ></a>
  </div>
</div>

<div class="show-page-content">
  <div class="description">
    <h4>A bit more about this cocktail...</h4>
    <h5>Doses</h5>
    <% @doses.each do |dose| %>
      <ul class="list-inline dose-list">
        <li><%= dose.description %></li>
        <li><%= dose.ingredient.name %></li>
        <%= link_to 'Delete', cocktail_dose_path(@cocktail,dose), method: :delete %>
      </ul>
    <% end %>
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class:"btn btn-primary"%>
    <%= link_to "Back", cocktails_path, class:"btn btn-warning" %>
  </div>
  <div class="doses">

    <h4>Leave your comments</h4>
    <form action="#" class="form-inline">
    <input type="text" class="form-control">
    <input type="submit" class="btn btn-primary">
    </form>
    <br>
    <h4>Share with your friends</h4>
    <ul class="list-unstyled list-inline">
      <li><a href="#"><i class="fab fa-weixin"></i></a></li>
      <li><a href="#"><i class="fab fa-weibo"></i></a></li>
      <li><a href="#"><i class="fab fa-instagram"></i></a></li>
    </ul>
  </div>
</div>
